<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"></style>

    <style name="Widget" />

    <style name="Widget.List">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Widget.ListTitle">
        <item name="android:textColor">@color/headerTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="content_text_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="text_tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="label_text_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/watch_select_lv_item</item>
    </style>
</resources>
